Console.WriteLine("Hello, I'm a simple calculator.  \n Please, insert a number: ");
double birinchi= Convert.ToDouble(Console.ReadLine());
Console.WriteLine($"Okay, our first number is  {birinchi} ... \n Now, please enter the second number: ");
double ikkinchi = Convert.ToDouble(Console.ReadLine());
Console.WriteLine("Great. I just got the numbers. it is time to choose if you want to: \n 1. add \n 2. substract \n 3. multiply \n 4. divide  \n 5. modulus");
int tanlov= Convert.ToInt32(Console.ReadLine());
if (tanlov == 1)
{
Console.WriteLine($"{birinchi}+{ikkinchi} = {birinchi + ikkinchi} ");

}
else if (tanlov == 2) { Console.WriteLine($"{birinchi}- {ikkinchi} ={birinchi - ikkinchi}"); }
else if (tanlov == 3) { Console.WriteLine($"{birinchi}*{ikkinchi} ={birinchi * ikkinchi}"); }
else if (tanlov == 4) { Console.WriteLine($"{birinchi}/{ikkinchi} ={birinchi / ikkinchi}"); }
else if (tanlov == 5) { Console.WriteLine($"{birinchi} modulus {ikkinchi}=  {birinchi % ikkinchi}"); }
else {
    Console.WriteLine("Please, enter numbers from 1 to 5 to choose the operators");
}
